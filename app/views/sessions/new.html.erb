<div class="new_style">
  <h2>ログイン</h2>
  <%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>
  <div class="user_email">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email %>
  </div>
    <br>
  <div class="user_password">
    <%= f.label :パスワード %>
    <%= f.password_field :password %>
  </div>
    <br>
    <%= f.submit "ログイン" %>
  <% end %>
</div>

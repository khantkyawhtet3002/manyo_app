<div class="container-fluid">
  <div class="view_title">
    <h1>ラベル一覧</h1>
  </div>
  <p id="notice"><%= notice %></p>

<table class="PostTable">
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
    <% @labels.each do |label| %>
      <tr>
        <td><%= label.name %></td>
        <td><%= link_to '詳細', label, class: "btn btn-info" %></td>
        <td><%= link_to '編集', edit_label_path(label), class: "btn btn-info" %></td>
        <td><%= link_to '削除', label, class: "btn btn-danger", method: :delete, data: { confirm: '本当に削除していいですか？' } %></td>
      </tr>
    <% end %>

</table>

<br>
<div class="link_group">
<%= link_to '新しくラベルを投稿する', new_label_path, class: "btn btn-info" %>
  </div>
</div>
